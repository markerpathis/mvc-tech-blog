<div>
  <h2>{{post.title}}</h2>
  <p class="text-muted">
    Written by
    {{post.user.name}}
    on
    {{format_date post.date_created}}
  </p>
  <p>
    {{post.content}}
  </p>
  <div class="">
    <h3>Comments</h3>
    <form class="comment-form">
      <div class="">
        <label for="comment-post"></label>
        <textarea class="form-control mb-3" type="text" id="comment-post"></textarea>
      </div>
      <div class="">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>
{{#each comments}}
  {{> comment-card}}
{{/each}}

<script src="/js/comment.js"></script>
