<div class="login-card">
  <h2 class="mb-3">Login to Your Account:</h2>
  <form class="login-form">
    <div class="mb-3">
      <label for="email-login" class="form-label">Email:</label>
      <input class="form-control" type="email" id="email-login" />
    </div>
    <div class="mb-3">
      <label for="password-login" class="form-label">Password:</label>
      <input class="form-control" type="password" id="password-login" />
    </div>
    <div class="mb-3">
      <button class="btn btn-primary" type="submit">Login</button>
    </div>
  </form>
</div>

<div class="login-card pt-3">
  <h2 class="mb-3">Create an account:</h2>
  <form class="signup-form">
    <div class="mb-3">
      <label for="name-signup">Full Name:</label>
      <input class="form-control" type="text" id="name-signup" />
    </div>
    <div class="mb-3">
      <label for="email-signup">Email:</label>
      <input class="form-control" type="email" id="email-signup" />
    </div>
    <div class="mb-3">
      <label for="password-signup">Password:</label>
      <input class="form-control" type="password" id="password-signup" />
    </div>
    <div class="">
      <button class="btn btn-primary" type="submit">Create Account</button>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>